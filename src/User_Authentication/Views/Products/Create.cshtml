@model User_Authentication.Models.ProductViewModels.CreateProduct

@{
    ViewData["Title"] = "Sell A Product";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    @Html.ValidationSummary()

    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Product.Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Product.Title" class="form-control" />
                <span asp-validation-for="Product.Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Product.Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Product.Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Product.ProductTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("Product.ProductTypeId", @Model.ProductTypeId)
                <span asp-validation-for="Product.ProductTypeId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Product.ProductTypeSubCategoryId" class="col-md-2 control-label"> Sub-Categories </label>
            <div class="col-md-10">
                <select asp-for="Product.ProductTypeSubCategoryId"
                        asp-items="Model.ProductTypeSubCategoryId"></select>
                <span asp-validation-for="Product.ProductTypeSubCategoryId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>